<% unless flash.empty? %>
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%=name%> alert-dismissable fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= msg.html_safe %>
    </div>
  <% end %>

  <% flash.clear %>
<% end %>
