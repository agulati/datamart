<!DOCTYPE html>
<html>
  <head>
    <title>Trends DW</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/tether/1.3.1/js/tether.min.js" %>
    <%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>
    <%= favicon_link_tag %>
  </head>

  <body>
    <%= render "layouts/header" %>
    <div class="container">
      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg.html_safe, class: "alert alert-#{name}", role: "alert") %>
      <% end %>
      <%= yield %>
    </div>
    <%= yield :page_script %>
  </body>
</html>
